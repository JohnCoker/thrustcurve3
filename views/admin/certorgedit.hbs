<h1>{{title}}</h1>

{{#if isSaved}}
<div class="alert alert-success" role="alert">
Changes to organization saved.
</div>
{{/if}}
{{#if isCreated}}
<div class="alert alert-success" role="alert">
New organization created.
</div>
{{/if}}
{{#if isUnchanged}}
<div class="alert alert-success" role="alert">
No changes to save.
</div>
{{/if}}

<form role="form" class="form-horizontal" name="edit-certorg" action="{{submitLink}}" method="post" data-toggle="validator">
  {{#unless isNew}}
  <div class="form-group">
    <label for="id" class="col-sm-3 control-label">ID</label>
    <div class="col-sm-9">
      <p class="id form-control-static">{{certorg._id}} {{#if certorg.migratedId}}(migrated {{certorg.migratedId}}){{/if}}</p>
      <input type="hidden" name="id" value="{{certorg._id}}">
    </div>
  </div>
  {{/unless}}
  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Full Name</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="name"
             pattern="^[A-Z][A-Za-z0-9/,. -]+$" required data-error="full name, no special characters"
             value="{{{certorg.name}}}">
      <span class="help-block with-errors"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="abbrev" class="col-sm-3 control-label">Abbreviation</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="abbrev"
             pattern="^[A-Za-z0-9/-]+$" required data-error="single word, no special characters"
             value="{{{certorg.abbrev}}}">
      <span class="help-block with-errors"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="aliases" class="col-sm-3 control-label">Aliases</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="aliases"
             pattern="^[A-Z][A-Za-z0-9/ &-]*( *, *[A-Z][A-Za-z0-9/ &-]*)*$" data-error="letters or words, separated by commas"
             placeholder="a1, a2, ...", value="{{{certorg.aliases}}}">
      <span class="help-block with-errors"></span>
    </div>
  </div>
  <div class="form-group website">
    <label for="website" class="col-sm-3 control-label">Web Site</label>
    <div class="col-sm-9">
      <div class="input-group">
        <input type="url" class="form-control" name="website"
               placeholder="http://..." value="{{certorg.website}}">
        <span class="input-group-addon"><a href="#" class="test"><i class="fa fa-external-link"></i></a></span>
      </div>
      <span class="help-block with-errors"></span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <input type="checkbox" name="active" {{#if certorg.active}}checked{{/if}}> Active
    </div>
  </div>
  <div class="form-group">
    <label for="motors" class="col-sm-3 control-label">Motors</label>
    <div class="col-sm-9">
      <p class="form-control-static">{{formatInt motors}}</p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9 form-submit">
      <button type="submit" class="btn btn-primary">Submit</button>
      <button type="reset" class="btn btn-default">Reset</button>
    </div>
  </div>
</form>
